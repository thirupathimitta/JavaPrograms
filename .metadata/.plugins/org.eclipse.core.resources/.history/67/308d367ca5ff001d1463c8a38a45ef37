package com.patterns;

public class Pattern11 {

	public static void main(String[] args) {
		int size = 5;

		for (int i = 1; i <= size; i++) {
		    for (int j = 1; j <= size - i; j++) {
		        System.out.print("  ");
		    }
		    for (int k = i; k >= 1; k--) {
		        System.out.print((char) ('a' + k - 1) + " ");
		    }
		    System.out.println();
		}

		/*
		 * char c = 'e'; // for (int k=0;k<=5; k++) { // // }
		 * 
		 * for (int i = 5; i >= 1; i--) { for (int j = i; j <=5 ; j++) {
		 * System.out.print((char) (c - (5 - j))+" "); } System.out.println();
		 * 
		 * }
		 */

	}
}


