package com.patterns;

public class Pattern11 {

	public static void main(String[] args) {
		int size = 5;

		for (int i = 1; i <= size; i++) {
		    for (int j = 1; j <= size - i; j++) {
		        System.out.print(" ");
		    }
		    for (int k = i; k >= 2; k--) {
		        System.out.print((char) ('a' + k - 2) + " ");
		    }
		    for (int l = 1; l <= i; l++) {
		        System.out.print((char) ('a' + l - 1) + " ");
		    }
		    System.out.println();
		}
/*

		for (int i = 5; i >= 1; i--) {
			for(int l=1;l<=5;l++) {
			for(int k=1;k<=5-l;k++) {
				System.out.print(" ");
			}
			}
		    for (int j = i; j <= 5; j++) {
		    	
		        System.out.print((char) ('e' - (5 - j)));
		    }
		    System.out.println();
		*/}

	}

}
